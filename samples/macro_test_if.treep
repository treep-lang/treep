// Test macro with if statement
macro testIf {
  pattern: testIf($cond)
  expand: {
    if (cond) {
      println("Condition is true")
    }
  }
}

def main() returns: Unit {
  println("=== if macro test ===")
  testIf(1 == 1)
  println("After first testIf")
  testIf(1 == 2)
  println("After second testIf")
  println("=== done ===")
}
